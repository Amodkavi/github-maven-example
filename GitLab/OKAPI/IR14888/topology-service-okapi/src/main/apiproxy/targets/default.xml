<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>StripTarget</Name>
            </Step>
            <Step>
                <Name>Get-CRAMER-LI-Basic-Auth-User-Id</Name>
            </Step>
            <Step>
                <Name>Get-CRAMER-LI-Basic-Auth-Password</Name>
            </Step>
            <Step>
                <Name>ApplyBasicAuthHeader</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows/>
    <HTTPTargetConnection>
        <LoadBalancer>
            <Server name="topology-service-cramerli"/>
        </LoadBalancer>
        <Path>/invapi/v1/nbn-avcs/network-topologies?serviceId={message.queryparam.serviceId}&amp;cmd=1</Path>
    </HTTPTargetConnection>
</TargetEndpoint>